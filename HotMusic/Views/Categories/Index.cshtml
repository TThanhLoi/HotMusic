@model IEnumerable<HotMusic.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Album> lstalbum = ViewBag.lstalbum;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thể Loại</h4>
            <div class="container">
                <div class="row">
                    @foreach(var item in Model)
                    {
                    <div class="col-md-4">
                        <a asp-action="Details" asp-controller="Categories" asp-route-id="@item.Id">@item.CategoryName</a>
                    </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    @foreach (var item in lstalbum)
    {
        <div class="col-sm-3 grid-margin">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <a href=""><img src="~/images/Album/@item.Imange" width="230px" height="230px" alt="" style="border-radius: 20px 20px 20px 20px"></a>
                        <div class="col-8 col-sm-12 col-xl-8 my-auto">
                            @Html.ActionLink(item.Name, "Details", "Album", new { @Id = item.Id }, null)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>