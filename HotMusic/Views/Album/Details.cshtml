@model HotMusic.Models.AlbumMusic

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<AlbumMusic> lstalbum = ViewBag.lstalbum;

}
<div class="row">
    <div class="col-md-4 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Những Bài Hát Có Trong Album</h4>
                    <ol>
                        @foreach (var item in lstalbum)
                        {
                        <li>
                            <div class="preview-item-content d-sm-flex flex-grow">
                                <div class="title-bxh" style="text-indent: 20px;">
                                    <a asp-action="Details" asp-controller="Music" asp-route-id="@item.Music.Id"><h6 class="preview-subject">@item.Music.MusiceName</h6></a>
                                    <div class="icon-music" style="font-size:20px;">
                                        @item.Music.ListenQuantity
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <a href="#">
                                                <i class="mdi mdi-download"></i>
                                            </a>
                                            @item.Music.FavoriteQuantity
                                            <a href="#">
                                                <i class="mdi mdi-heart"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-action="DangNhap" asp-controller="Account">
                                                <i class="mdi mdi-download"></i>
                                            </a>
                                            @item.Music.FavoriteQuantity
                                            <a asp-action="DangNhap" asp-controller="Account">
                                                <i class="mdi mdi-heart"></i>
                                            </a>
                                        }

                                    </div>
                                </div>
                            </div>
                        </li>
                        }
                    </ol>
            </div>
        </div>
    </div>



    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="preview-item-content d-sm-flex flex-grow">
                    <div class="row justify-content-center" style="width:650px">
                        <div class="card-body p-0" style="border: 2px solid #fff; border-radius: 20px 20px 20px 20px;">
                            <!-- Nested Row within Card Body -->
                            <div class="row d-flex align-items-center justify-content-center h-100" style="padding-top:20px; padding-bottom:20px;">
                                <div id="show">
                                    <div id="musicDisc" style="margin-top: 50px; margin-left: 40px;">
                                        <img id="showI" src="~/images/Album/@Model.Album.Imange" />
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="p-5">
                                        <div class="text-center">
                                            <h1 class="h4 text-gray-900 mb-4"></h1>
                                        </div>
                                        <div class="flex-grow">
                                            <h3>@Model.Album.Name</h3>
                                            <div class="me-auto text-sm-right pt-2 pt-sm-0">
                                                Số lượt thích Album: @Model.Album.FavoriteQuantity
                                            </div>
                                        </div>
                                        <hr />
                                        <div>
                                            <audio id="music" preload="auto" autoplay="true" loop="false" controls width="450px" height="450px">
                                                <source s@*rc="~/assets/mp3/@Model.Url" *@ type="audio/mp3">
                                            </audio>
                                        </div>

                                        <hr>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

