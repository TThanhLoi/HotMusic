@model HotMusic.ModelViews.RegisterVM

@{
    ViewData["Title"] = "Dang Ky";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-left mb-3">Register</h3>
                        <form asp-action="DangKy" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label>Ho Va Ten*</label>
                                <input type="text" asp-for="FullName" class="form-control p_input" placeholder="Ho Va Ten">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Email*</label>
                                <input type="email" asp-for="Email" class="form-control p_input" placeholder="Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>So Dien Thoai*</label>
                                <input type="tel" asp-for="Phone" class="form-control p_input" placeholder="So Dien Thoai">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Mat Khau</label>
                                <input type="password" asp-for="Password" class="form-control p_input" placeholder="Mat Khau">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label>Nhap Lai Mat Khau</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control p_input" placeholder="Nhap Lai Mat Khau">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary btn-block enter-btn">Dang Ky</button>
                            </div>
                            <div class="d-flex">
                                <button class="btn btn-facebook col mr-2">
                                    <i class="mdi mdi-facebook"></i> Facebook
                                </button>
                                <button class="btn btn-google col">
                                    <i class="mdi mdi-google-plus"></i> Google plus
                                </button>
                            </div>
                            <p class="sign-up text-center">Already have an Account?<a asp-action="DangNhap" asp-controller="Account"> Sign In</a></p>
                            <p class="terms">By creating an account you are accepting our<a href="#"> Terms & Conditions</a></p>
                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

