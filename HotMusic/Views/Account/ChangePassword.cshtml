@model HotMusic.ModelViews.ChangePasswordViewModel
@{
    ViewData["Title"] = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="row w-100 m-0">
            <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg">
                <div class="card col-lg-4 mx-auto">
                    <div class="card-body px-5 py-5">
                        <h3 class="card-title text-left mb-3">Thay Đổi Mật Khẩu</h3>
                        <form asp-controller="Account" asp-action="ChangePassword" method="post" class="myaccount-form">
                            <div class="card">
                                <div class="card-body">

                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Mật khẩu hiện tại</label>
                                            <input class="form-control" asp-for="PasswordNow" type="password">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Mật khẩu mới</label>
                                            <input class="form-control" asp-for="Password" type="password">
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label for="example-text-input" class="form-control-label">Nhập lại mật khẩu mới</label>
                                            <input class="form-control" asp-for="ConfirmPassword" type="password">
                                        </div>
                                    </div>

                                    <div class="single-input">
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-primary btn-block enter-btn">Đăng Nhập</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- row ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

