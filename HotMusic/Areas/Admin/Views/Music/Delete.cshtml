@model HotMusic.Models.Music

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="margin-left: 30px; color: white;">Are you sure you want to delete this?</h3>

    <hr />
<div class="col-10" style="padding: 25px;"  >
        <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Thông tin bai hat : @Model.MusiceName</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text-dark font-weight-semibold">@Model.Id</td>
                        </tr>
                        <tr>
                            <td>Tên bai hat:</td>
                            <td>@Model.MusiceName</td>
                        </tr>
                        <tr>
                            <td>Tac gia:</td>
                            <td>@Model.Author.AuthorName</td>
                        </tr>
                        <tr>
                            <td>URL:</td>
                            <td>@Model.Url</td>
                        </tr>
                        <tr>
                            <td>Số lượt nghe:</td>
                            <td>@Model.ListenQuantity</td>
                        </tr>
                        <tr>
                            <td>Số lượt Download:</td>
                            <td>@Model.DownloadQuantity</td>
                        </tr>
                        <tr>
                            <td>Số lượt Thích:</td>
                            <td>@Model.FavoriteQuantity</td>
                        </tr>
                        <tr>
                            <td>Vip:</td>
                            <td>
                                @if (Model.IsVip == true)
                                {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-1" checked="" disabled />
                                        <label for="switch-1"></label>
                                    </div>
                                }
                                else
                                {
                                    <div class="switch m-r-10">
                                        <input type="checkbox" id="switch-1" disabled />
                                        <label for="switch-1"></label>
                                    </div>
                                }
                            </td>
                        </tr>
                        <tr>
                            <td>Ảnh đại diện:</td>
                            <td>
                                <img width="200" height="200" src="~/images/BaiHat/@Model.Image" alt="@Model.MusiceName" />
                            </td>
                        </tr>
                        <tr>
                            <td>Mô tả sản phẩm:</td>
                            <td>@Html.Raw(Model.Description)</td>
                        </tr>
                        <tr>
                            <td>Xác nhận xóa:</td>
                            <td>
                                <form asp-controller="Music" asp-action="Delete" asp-route-id="@Model.Id">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                                    <a asp-action="Index">Quay lại</a>
                                </form>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
        </div>
    </div>

