@model HotMusic.Models.Album

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="margin-left: 30px; color: white;">Are you sure you want to delete this?</h3>

<hr />
<div class="col-10" style="padding: 25px;">
    <div class="card mb-4" style="padding: 25px;">
        <div class="card-body">
            <h4 class="card-title">Thông tin Album : @Model.Name</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text-dark font-weight-semibold">@Model.Id</td>
                        </tr>
                        <tr>
                            <td>Tên Album:</td>
                            <td>@Model.Name</td>
                        </tr>
                        <tr>
                            <td>The loai:</td>
                            <td>@Model.Category.CategoryName</td>
                        </tr>
                        <tr>
                            <td>URL:</td>
                            <td>@Model.Url</td>
                        </tr>
                        <tr>
                            <td>Ngay tao Album:</td>
                            <td>@Model.Createdate</td>
                        </tr>
                        
                        <tr>
                            <td>Số lượt Thích:</td>
                            <td>@Model.FavoriteQuantity</td>
                        </tr>
                        
                        <tr>
                            <td>Ảnh đại diện:</td>
                            <td>
                                <img width="200" height="200" src="~/images/Album/@Model.Imange" alt="@Model.Imange" />
                            </td>
                        </tr>
                        <tr>
                            <td>Mô tả sản phẩm:</td>
                            <td>@Html.Raw(Model.Description)</td>
                        </tr>
                        <tr>
                            <td>Xác nhận xóa:</td>
                            <td>
                                <form asp-controller="Album" asp-action="Delete" asp-route-id="@Model.Id">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                                    <a asp-action="Index">Quay lại</a>
                                </form>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>