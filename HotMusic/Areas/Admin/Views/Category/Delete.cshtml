@model HotMusic.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="margin-left: 30px; color: white;">Are you sure you want to delete this?</h3>

<hr />
<div class="col-10" style="padding: 25px;">
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">Thông tin sản phẩm : @Model.CategoryName</h4>
            <div class="table-responsive">
                <table class="product-info-table m-t-20">
                    <tbody>
                        <tr>
                            <td>ID:</td>
                            <td class="text-dark font-weight-semibold">@Model.Id</td>
                        </tr>
                        <tr>
                            <td>Tên sản phẩm:</td>
                            <td>@Model.CategoryName</td>
                        </tr>

                        <tr>
                            <td>
                                <form asp-controller="Category" asp-action="Delete" asp-route-id="@Model.Id">
                                    <input type="hidden" asp-for="Id" />
                                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger" />
                                    <a class="btn btn-outline-danger" asp-action="Index">Quay lại</a>
                                </form>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>