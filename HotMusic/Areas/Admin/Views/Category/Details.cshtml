@model HotMusic.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="margin-left: 30px; color: white;">Thông tin chi tiết thể loại</h1>

<div>
    <hr />
    <div class="col-10" style="padding: 25px;">
        <div class="card mb-4" style="padding: 25px;">
            <div class="card-body">
                <h4 class="card-title">Thông tin sản phẩm : @Model.CategoryName</h4>
                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>ID:</td>
                                <td class="text-dark font-weight-semibold">@Model.Id</td>
                            </tr>
                            <tr>
                                <td>Tên thể loại:</td>
                                <td>@Model.CategoryName</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Chỉnh sửa</a> |
                <a class="btn btn-outline-danger" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </div>
</div>

