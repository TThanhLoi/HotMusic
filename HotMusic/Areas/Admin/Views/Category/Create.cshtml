@model HotMusic.Models.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="margin-left: 30px; color: white;">Thêm Thể Loại</h1>

<hr />
<div class="row">
    <div class="col-10" style="padding: 25px;">
        <div class="card mb-4" style="padding: 25px;">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CategoryName" class="control-label"></label>
                    <input asp-for="CategoryName" class="form-control" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <button class="btn btn-outline-danger"><a asp-action="Index">Back to List</a></button>
</div>

