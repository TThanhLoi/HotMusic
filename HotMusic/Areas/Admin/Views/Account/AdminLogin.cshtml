@model HotMusic.Areas.Admin.Models.LoginViewModel
@{
    ViewData["Title"] = "AdminLogin";
    //Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
    <main class="main-content  mt-0">
        <section>
            @*<div class="page-header min-vh-100">*@
                <div class="container">
            <div class="col-lg-4 mx-auto">
                <div class="card card-plain" style="padding-top: 100px; padding-top: 100px;box-shadow: 0 0 2rem 0 rgb(136 152 170);">
                                <div class="card-header pb-0 text-start">
                                    <h4 class="font-weight-bolder">Sign In</h4>
                                    <p class="mb-0">Enter your email and password to sign in</p>
                                
                                <div class="card-body">
                                <form asp-action="AdminLogin" method="post">
                                        <div class="mb-3">
                                            <input type="email" class="form-control form-control-lg" placeholder="Email" aria-label="Email" asp-for="UserName">
                                            <span asp-validation-for="UserName" class="text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <input type="password" class="form-control form-control-lg" placeholder="Password" aria-label="Password" asp-for="Password">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-check form-switch">
                                            <input class="form-check-input" type="checkbox" id="rememberMe">
                                            <label class="form-check-label" for="rememberMe">Remember me</label>
                                        </div>
                                        <div class="text-center">
                                            <button type="submit" class="btn btn-lg btn-primary btn-lg w-100 mt-4 mb-0">Sign in</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
            @*</div>*@
        </section>
    </main>

