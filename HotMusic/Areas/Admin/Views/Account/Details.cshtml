@model HotMusic.Models.Account

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 style="margin-left: 30px; color: white;">Thông Tin Chi Tiết Tài Khoản</h1>

<div>
    <hr />
    <div class="col-10">
        <div class="card mb-4" style="padding: 25px;">
            <div class="card-body">
                <h4 class="card-title">Thông tin tai khoan : @Model.UserName</h4>
                <div class="table-responsive">
                    <table class="product-info-table m-t-20">
                        <tbody>
                            <tr>
                                <td>ID:</td>
                                <td class="text-dark font-weight-semibold">@Model.Id</td>
                            </tr>
                            <tr>
                                <td>Username:</td>
                                <td>@Model.UserName</td>
                            </tr>
                            <tr>
                                <td>Role:</td>
                                <td>@Model.Role</td>
                            </tr>
                            <tr>
                                <td>Fullname:</td>
                                <td>@Model.FullName</td>
                            </tr>
                            <tr>
                                <td>Address:</td>
                                <td>@Model.Address</td>
                            </tr>
                            <tr>
                                <td>Phone:</td>
                                <td>@Model.Phone</td>
                            </tr>
                            <tr>
                                <td>Email:</td>
                                <td>@Model.Email</td>
                            </tr>
                            
                            <tr>
                                <td>VIP:</td>
                                <td>@Model.IdVip</td>
                            </tr>
                            <tr>
                                <td>Ngay bat dau goi VIP:</td>
                                <td>@Model.StartTime</td>
                            </tr>
                            <tr>
                                <td>Ngay ket thuc goi VIP:</td>
                                <td>@Model.EndTime</td>
                            </tr>
                            

                        </tbody>
                    </table>
                </div>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id">Chỉnh sửa</a> |
                <a class="btn btn-outline-danger" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </div>
</div>
